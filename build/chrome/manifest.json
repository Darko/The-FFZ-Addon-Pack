{
  "manifest_version": 2,
  "name": "The FFZ Add-On Pack",
  "short_name": "ffz-ap",
  "version": "2.0.6",
  "description": "A combination of add-ons for the Twitch extension \"FrankerFaceZ\"",

  "icons": {
    "48": "chrome/icon48.png",
    "128": "chrome/icon128.png"
  },

  "background": {
    "scripts": ["chrome/requests.js"]
  },

  "content_scripts": [ {
    "all_frames": true,
    "js": [ "chrome/script.js" ],
    "matches": [ "*://*.twitch.tv/*" ],
    "exclude_globs": [ "*://api.twitch.tv/*" ]
  } ],

  "permissions": [
    "*://*.twitch.tv/*",
    "*://*.betterttv.net/*",
    "*://*.lordmau5.com/*",
    "webRequest",
    "webRequestBlocking"
  ]
}
